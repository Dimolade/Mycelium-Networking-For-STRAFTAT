<Project>
    <!-- Custom Variables -->
    <PropertyGroup>
        <GameDirectory>.../STRAFTAT/</GameDirectory>
        <PluginsDirectory>.../STRAFTAT/BepInEx/plugins/</PluginsDirectory>
    </PropertyGroup>

    <!-- Game Directory -->
    <PropertyGroup>
        <ManagedDirectory>$(GameDirectory)STRAFTAT_Data/Managed/</ManagedDirectory>
    </PropertyGroup>

    <!-- Copy to Plugin Directory for Quicker Testing -->
    <Target Name="CopyFiles" AfterTargets="PostBuildEvent">
        <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(PluginsDirectory)"/>
    </Target>
</Project>
